ss=\"small text-capitalize\"\r\n            v-bind:class=\"{\r\n              'text-right': history.user == router.currentRoute.params.name,\r\n              'text-left': history.user != router.currentRoute.params.name,\r\n            }\"\r\n          >\r\n            {{ history.user }}\r\n          </div>\r\n          <div\r\n            class=\"message\"\r\n            v-bind:class=\"{\r\n              'text-right': history.user == router.currentRoute.params.name,\r\n              'text-left': history.user != router.currentRoute.params.name,\r\n            }\"\r\n          >\r\n            {{ history.text }}\r\n          </div>\r\n          <div\r\n            class=\"small\"\r\n            v-bind:class=\"{\r\n              'text-right': history.user == router.currentRoute.params.name,\r\n              'text-left': history.user != router.currentRoute.params.name,\r\n            }\"\r\n          >\r\n            {{ history.timestamp }}\r\n          </div>\r\n        </div>\r\n      </div>\r\n    </div>\r\n    <div class=\"chat-box fixed-bottom py-2\">\r\n      <b-form @submit=\"onSubmit\">\r\n        <b-container fluid>\r\n          <b-row align-v=\"stretch\">\r\n            <b-col>\r\n              <b-button\r\n                v-b-toggle.searchSidebar\r\n                class=\"send-btn\"\r\n                variant=\"outline-light\"\r\n              >\r\n                <b-icon-list></b-icon-list>\r\n              </b-button>\r\n            </b-col>\r\n            <b-col cols=\"10\">\r\n              <b-form-textarea\r\n                id=\"input-message\"\r\n                v-model=\"message\"\r\n                placeholder=\"Type something...\"\r\n                required\r\n                autofocus\r\n                size=\"sm\"\r\n                no-resize\r\n              ></b-form-textarea>\r\n            </b-col>\r\n            <b-col>\r\n              <b-button\r\n                class=\"send-btn\"\r\n                type=\"submit\"\r\n                variant=\"outline-light\"\r\n                block\r\n              >\r\n                <b-icon-arrow-return-left></b-icon-arrow-return-left>\r\n              </b-button>\r\n            </b-col>\r\n          </b-row>\r\n        </b-container>\r\n      </b-form>\r\n      <b-sidebar id=\"searchSidebar\" title=\"Search history\" shadow>\r\n        <div>\r\n          <b-form @submit=\"searchMesage\">\r\n            <b-container fluid>\r\n              <b-row align-v=\"stretch\">\r\n                <b-col cols=\"9\">\r\n                  <b-form-input\r\n                    class=\"mb-2 mr-sm-2 mb-sm-0\"\r\n                    id=\"searchInput\"\r\n                    v-model=\"searchParam\"\r\n                    placeholder=\"Search by message\"\r\n                    required\r\n                  ></b-form-input>\r\n                </b-col>\r\n                <b-col>\r\n                  <b-button type=\"submit\" variant=\"outline-success\" block>\r\n                    <b-icon-search></b-icon-search>\r\n                  </b-button>\r\n                </b-col>\r\n              </b-row>\r\n            </b-container>\r\n          </b-form>\r\n        </div>\r\n        <div>\r\n          <div\r\n            class=\"text-left\"\r\n            v-for=\"(result, index) in searchResults\"\r\n            v-bind:key=\"index\"\r\n          >\r\n            <hr />\r\n            <p class=\"small\">{{ result.user }} - {{ result.timestamp }}</p>\r\n            <p class=\"message\">{{ result.text }}</p>\r\n            <hr />\r\n          </div>\r\n        </div>\r\n        <template #footer>\r\n          <b-button class=\"m-2 w-75\" type=\"submit\" variant=\"outline-danger\" block v-on:click=\"leaveChat\">\r\n            Leave chat</b-button\r\n          >\r\n        </template>\r\n      </b-sidebar>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport { io } from \"socket.io-client\";\r\nimport router from \"../router\";\r\nimport history from \"../../../data/history.json\";\r\n\r\nconst socket = io(\"http://localhost:3000\", {\r\n  extraHeaders: {\r\n    \"chat-tunnel\": \"chat\",\r\n  },\r\n});\r\n\r\nconst callback = (err) => alert(err);\r\n\r\nsocket.on(\"connect\", () => {\r\n  socket.emit(\"check\", router.currentRoute.params.name, (response) => {\r\n    // redirect to Join view if not valid\r\n    if (!response) {\r\n      router.push(\"/\", (err) => console.error(err));\r\n    }\r\n  });\r\n});\r\n\r\nexport default {\r\n  name: \"Chat\",\r\n  data() {\r\n    return {\r\n      message: \"\",\r\n      histories: history,\r\n      router,\r\n      searchParam: \"\",\r\n      searchResults: [],\r\n    };\r\n  },\r\n  methods: {\r\n    onSubmit(event) {\r\n      event.preventDefault();\r\n      // send message\r\n      const form = {\r\n        userName: router.currentRoute.params.name,\r\n        message: this.message,\r\n      };\r\n      socket.emit(\"chatMessage\", form, callback);\r\n    },\r\n    searchMesage(event) {\r\n      event.preventDefault();\r\n      this.searchResults = this.histories.filter((history) => {\r\n        const text = history.text || \"\";\r\n        return text.includes(this.searchParam);\r\n      });\r\n      console.log(\"this.searchResults\", this.searchResults);\r\n    },\r\n    leaveChat() {\r\n      router.push('/', (err) => console.error(err))\r\n    }\r\n  },\r\n};\r\n</script>\r\n\r\n<style>\r\n.chat-box {\r\n  background-color: #adb4cc;\r\n}\r\n.not-self {\r\n  float: left;\r\n  clear: both;\r\n  background-color: #fff6a8;\r\n  margin-left: 10px;\r\n}\r\n.self {\r\n  float: right;\r\n  clear: both;\r\n  background-color: #d8d7de;\r\n  margin-right: 10px;\r\n}\r\n.messages {\r\n  width: 100%;\r\n  position: fixed;\r\n  overflow-y: scroll;\r\n  top: 0;\r\n  left: 0;\r\n  bottom: 75px;\r\n}\r\n.small {\r\n  font-size: smaller;\r\n}\r\n.message {\r\n  font-size: 1.2em;\r\n}\r\n.text-right {\r\n  text-align: right;\r\n}\r\n.text-left {\r\n  text-align: left;\r\n}\r\n.chat-bar {\r\n  box-sizing: border-box;\r\n}\r\n.send-btn {\r\n  height: 100%;\r\n  width: 100%;\r\n}\r\n</style>\r\n"]}]}